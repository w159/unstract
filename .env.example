# Unstract Platform Environment Variables Example
# Copy this file to .env and update with your values

# Main Application Credentials
DEFAULT_AUTH_USERNAME=unstract
DEFAULT_AUTH_PASSWORD=unstract

# System Admin Credentials (required)
SYSTEM_ADMIN_USERNAME=admin
SYSTEM_ADMIN_PASSWORD=your-secure-password-here
SYSTEM_ADMIN_EMAIL=admin@yourdomain.com

# PostgreSQL Database
DB_NAME=unstract_db
DB_USER=unstract_dev
DB_PASSWORD=unstract_pass
DB_HOST=backend-db-1
DB_PORT=5432
DB_SCHEMA=unstract

# RabbitMQ
CELERY_BROKER_BASE_URL=amqp://backend-mq-1:5672/
CELERY_BROKER_USER=admin
CELERY_BROKER_PASS=password

# Redis
REDIS_HOST=backend-redis-1
REDIS_PORT=6379
REDIS_USER=default
REDIS_PASSWORD=

# MinIO Object Storage
MINIO_ENDPOINT=backend-minio-1:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123

# Security Keys (IMPORTANT: Change these!)
DJANGO_SECRET_KEY=your-django-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Session Configuration
SESSION_COOKIE_AGE=86400
SESSION_EXPIRATION_TIME_IN_SECOND=3600

# Other Required Settings
ENABLE_LOG_HISTORY=true
STRUCTURE_TOOL_IMAGE_URL=unstract/tool-structure
STRUCTURE_TOOL_IMAGE_NAME=unstract/tool-structure
STRUCTURE_TOOL_IMAGE_TAG=latest